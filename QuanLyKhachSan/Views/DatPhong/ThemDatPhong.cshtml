@*@model QuanLyKhachSan.Models.DatPhongViewModel

@{
    ViewBag.Title = "Thêm đặt phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title mt-5">Thêm đặt phòng</h3>
        </div>
    </div>
</div>

@using (Html.BeginForm("ThemDatPhong", "DatPhong", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="row formtype">

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.MaKH, "Khách hàng")
                @Html.DropDownListFor(m => m.MaKH,
                    new SelectList(ViewBag.KhachHangs, "MaKH", "HoTen"),
                    "-- Chọn khách hàng --",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MaKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.MaPhong, "Phòng")
                @Html.DropDownListFor(m => m.MaPhong,
                    new SelectList(ViewBag.Phongs, "MaPhong", "SoPhong"),
                    "-- Chọn phòng --",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MaPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.NgayDat, "Ngày đặt")
                <input type="date" class="form-control" id="NgayDat" name="NgayDat"
                       value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.ThoiGianNhanPhong, "Ngày nhận phòng")
                <input type="datetime-local" class="form-control" id="ThoiGianNhanPhong" name="ThoiGianNhanPhong" />
                @Html.ValidationMessageFor(m => m.ThoiGianNhanPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.ThoiGianTraPhongDuKien, "Ngày trả phòng dự kiến")
                <input type="datetime-local" class="form-control" id="ThoiGianTraPhongDuKien" name="ThoiGianTraPhongDuKien" />
                @Html.ValidationMessageFor(m => m.ThoiGianTraPhongDuKien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.TrangThaiCoc, "Trạng thái cọc")
                @Html.DropDownListFor(
                    m => m.TrangThaiCoc,
                    new SelectList(new[] { "Chưa cọc", "Đã cọc" }),
                    "-- Chọn trạng thái --",
                    new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(m => m.TinhTrang, "Tình trạng")
                @Html.DropDownListFor(
                    m => m.TinhTrang,
                    new SelectList(new[] { "Chờ xác nhận", "Đã xác nhận", "Hoàn tất", "Đã huỷ" }),
                    "-- Chọn tình trạng --",
                    new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-12 text-right mt-3">
            <input type="submit" value="Thêm mới" class="btn btn-success" />
            @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}*@
