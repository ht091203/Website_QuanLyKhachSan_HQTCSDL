@model QuanLyKhachSan.Models.LoaiPhongViewModel
@{
    ViewBag.Title = "Chọn phòng - " + Model.TenLoai;
}

<div class="breadcrumb-section">
    <div class="container">
        <div class="breadcrumb-text">
            <h2>@Model.TenLoai</h2>
            <div class="bt-option">
                <a href="@Url.Action("Index","Home")">Trang chủ</a>
                <a href="@Url.Action("Index","XemPhong")">Phòng</a>
                <span>Chọn phòng</span>
            </div>
        </div>
    </div>
</div>

<section class="room-details-section spad">
    <div class="container">
        <div class="row">

            <!-- Thông tin loại phòng -->
            <div class="col-lg-8">
                <div class="room-details-item">
                    <img src="@Url.Content("~/Content/img/room/" + Model.Anh)"
                         class="img-fluid w-100 rounded-3 shadow-lg mb-4"
                         style="max-height:500px;object-fit:cover;"
                         onerror="this.src='@Url.Content("~/Content/img/room/room-1.jpg")'" />

                    <div class="rd-text">
                        <h2>@Model.DonGia.ToString("N0") ₫<span>/đêm</span></h2>
                        <table class="table">
                            <tr><td>Sức chứa:</td><td>@Model.SucChua người</td></tr>
                            <tr><td>Mô tả:</td><td>@Model.MoTa</td></tr>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Form chọn phòng -->
            <div class="col-lg-4">
                <div class="room-booking">
                    <h3>Chọn phòng</h3>

                    @using (Html.BeginForm("ChonPhong", "DatPhongO", FormMethod.Get))
                    {
                        @Html.Hidden("MaLP", Model.MaLP)

                        <div class="mb-2">
                            <label>Ngày nhận:</label>
                            <input type="date" name="TuNgay" class="form-control"
                                   value="@(Request["TuNgay"] ?? ViewBag.TuNgay?.ToString("yyyy-MM-dd"))" required />
                        </div>
                        <div class="mb-2">
                            <label>Ngày trả:</label>
                            <input type="date" name="DenNgay" class="form-control"
                                   value="@(Request["DenNgay"] ?? ViewBag.DenNgay?.ToString("yyyy-MM-dd"))" required />
                        </div>

                        <button type="submit" class="btn w-100 mt-2" style="background-color:#6b6b6b;color:white;">Kiểm tra phòng trống</button>
                    }

                    @if (ViewBag.PhongTrong != null)
                    {
                        <hr />
                        <h5>Danh sách phòng trống:</h5>
                        <ul class="list-group">
                            @foreach (var phong in ViewBag.PhongTrong as List<QuanLyKhachSan.Models.PhongViewModel>)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>Phòng @phong.SoPhong</strong><br />
                                        Vị trí: @phong.ViTri <br />
                                        Mô tả: @phong.MoTaLoai
                                    </div>
                                    <div>
                                        <a href="@Url.Action("ChiTiet", "Phong", new { id = phong.MaPhong })"
                                           class="btn btn-outline-info btn-sm">Xem</a>
                                        <a href="@Url.Action("ThongTinDatPhong", "DatPhongO", new {
                                                maPhong = phong.MaPhong,
                                                donGia = phong.DonGia,
                                                tuNgay = Request["TuNgay"],
                                                denNgay = Request["DenNgay"]
                                        })" class="btn btn-primary btn-sm">
                                            Chọn
                                        </a>

                                    </div>
                                </li>
                            }
                        </ul>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-2">@ViewBag.Error</div>
                    }
                </div>
            </div>

        </div>
    </div>
</section>
