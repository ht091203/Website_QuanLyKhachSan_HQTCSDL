@model IEnumerable<QuanLyKhachSan.Models.DichVuViewModel>

@{
    ViewBag.Title = "Quản lý dịch vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title mt-5">Danh sách dịch vụ</h3>
        </div>
        <div class="col-auto text-right float-right ml-auto">
            @Html.ActionLink("Thêm mới", "ThemDichVu", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="thead-light">
                    <tr>
                        <th>Mã dịch vụ</th>
                        <th>Tên dịch vụ</th>
                        <th>Đơn giá gốc</th>
                        <th>Mô tả</th>
                        <th>Mã hóa đơn</th>
                        <th>Mã phòng</th>
                        <th>Số lượng</th>
                        <th>Đơn giá thực tế</th>
                        <th>Trạng thái</th>
                        <th class="text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.MaDV)</td>
                            <td>@Html.DisplayFor(m => item.TenDV)</td>
                            <td>@String.Format("{0:N0} ₫", item.DonGiaGoc)</td>
                            <td>@Html.DisplayFor(m => item.MoTa)</td>
                            <td>@Html.DisplayFor(m => item.MaHD)</td>
                            <td>@Html.DisplayFor(m => item.MaPhong)</td>
                            <td>@Html.DisplayFor(m => item.SoLuong)</td>
                            <td>@String.Format("{0:N0} ₫", item.DonGiaThucTe)</td>
                            <td>
                                @if (item.TrangThai == "Hoạt động")
                                {
                                    <span class="badge badge-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Ngừng</span>
                                }
                            </td>
                            <td class="text-right">
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v ellipse_color"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        @Html.ActionLink("Chỉnh sửa", "ChinhSuaDichVu", new { id = item.MaDV }, new { @class = "dropdown-item" })
                                        @Html.ActionLink("Chi tiết", "ChiTietDichVu", new { id = item.MaDV }, new { @class = "dropdown-item" })
                                        @Html.ActionLink("Xóa", "XoaDichVu", new { id = item.MaDV }, new { @class = "dropdown-item text-danger" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
