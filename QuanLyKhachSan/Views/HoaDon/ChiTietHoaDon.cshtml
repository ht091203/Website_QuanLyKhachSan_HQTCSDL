@model QuanLyKhachSan.Models.ChiTietHoaDonViewModel
@{
    ViewBag.Title = "Chi tiết hóa đơn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Hóa đơn #@Model.MaHD</h3>
<hr />

<p><strong>Khách hàng:</strong> @Model.TenKhachHang (@Model.SoDienThoai)</p>
<p><strong>Ngày lập:</strong> @Model.NgayLap.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Phương thức thanh toán:</strong> @Model.PTTT</p>
<p><strong>Trạng thái:</strong> @Model.TrangThai</p>

<hr />
<h4>Chi tiết phòng</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Số phòng</th>
            <th>Loại phòng</th>
            <th>Số ngày ở</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChiTietPhong)
        {
            <tr>
                <td>@item.SoPhong</td>
                <td>@item.LoaiPhong</td>
                <td>@item.SoNgayO</td>
                <td>@item.DonGia.ToString("N0") ₫</td>
                <td>@item.ThanhTien.ToString("N0") ₫</td>
            </tr>
        }
    </tbody>
</table>

<h4>Chi tiết dịch vụ</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên dịch vụ</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChiTietDichVu)
        {
            <tr>
                <td>@item.TenDV</td>
                <td>@item.SoLuong</td>
                <td>@item.DonGia.ToString("N0") ₫</td>
                <td>@item.ThanhTien.ToString("N0") ₫</td>
            </tr>
        }
    </tbody>
</table>

<hr />
<h4>Tổng cộng</h4>
<p>Tiền phòng: <strong>@Model.TongTienPhong.ToString("N0") ₫</strong></p>
<p>Tiền dịch vụ: <strong>@Model.TongTienDichVu.ToString("N0") ₫</strong></p>
<p class="text-danger">Tổng hóa đơn: <strong>@Model.TongTienHoaDon.ToString("N0") ₫</strong></p>
