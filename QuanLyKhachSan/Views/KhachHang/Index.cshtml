@model IEnumerable<QuanLyKhachSan.Models.KhachHang>

@{
    ViewBag.Title = "Danh sách Khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <div class="mt-5 d-flex justify-content-between align-items-center">
                <h4 class="card-title">Danh sách Khách hàng</h4>
                @Html.ActionLink("Thêm khách hàng mới", "ThemKhachHang", null, new { @class = "btn btn-primary veiwbutton" })
            </div>
        </div>
    </div>
</div>

<!-- Bộ lọc tìm kiếm -->
<div class="row mb-4">
    <div class="col-lg-12">
        <form method="get" action="@Url.Action("Index", "KhachHang")">
            <div class="row formtype">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Mã khách hàng</label>
                        <input class="form-control" type="text" name="maKH" placeholder="Nhập mã KH" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Tên khách hàng</label>
                        <input class="form-control" type="text" name="tenKH" placeholder="Nhập tên KH" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <button type="submit" class="btn btn-success btn-block mt-0">Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<div class="row mt-4">
    <div class="col-sm-12">
        <div class="card card-table">
            <div class="card-body booking_card">
                <div class="table-responsive">
                    <table class="datatable table table-striped table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>Họ tên</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Địa chỉ</th>
                                <th class="text-right">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.HoTen</td>
                                    <td>@item.NgaySinh</td>
                                    <td>@item.GioiTinh</td>
                                    <td>@item.SoDienThoai</td>
                                    <td>@item.Email</td>
                                    <td>@item.DiaChi</td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v ellipse_color"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                @Html.ActionLink("Chỉnh sửa", "ChinhSuaKhachHang", new { id = item.MaKH }, new { @class = "dropdown-item" })
                                                @Html.ActionLink("Chi tiết", "ChiTietKhachHang", new { id = item.MaKH }, new { @class = "dropdown-item" })
                                                @Html.ActionLink("Xóa", "XoaKhachHang", new { id = item.MaKH }, new { @class = "dropdown-item text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác nhận Xóa -->
<div id="delete_asset" class="modal fade delete-modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src="~/assets/img/sent.png" alt="" width="50" height="46" />
                <h3 class="delete_class">Bạn có chắc muốn xóa khách hàng này?</h3>
                <div class="m-t-20">
                    <a href="#" class="btn btn-white" data-dismiss="modal">Hủy</a>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>
