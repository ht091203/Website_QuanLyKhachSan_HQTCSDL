@model QuanLyKhachSan.Models.LoaiPhong

@{
    ViewBag.Title = "Chỉnh sửa loại phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title mt-5">Chỉnh sửa loại phòng</h3>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaLP)

    <div class="row formtype mt-4">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.TenLoai, "Tên loại phòng")
                @Html.TextBoxFor(model => model.TenLoai, new { @class = "form-control", placeholder = "Nhập tên loại phòng..." })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.DonGia, "Đơn giá (VNĐ)")
                @Html.TextBoxFor(model => model.DonGia, new { @class = "form-control", placeholder = "Nhập đơn giá..." })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-8">
            <div class="form-group">
                @Html.LabelFor(model => model.MoTa, "Mô tả")
                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = "4", placeholder = "Nhập mô tả phòng..." })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label class="display-block">Trạng thái loại phòng</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="active" value="1" checked />
                    <label class="form-check-label" for="active">Hoạt động</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="inactive" value="0" />
                    <label class="form-check-label" for="inactive">Ngừng hoạt động</label>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary buttonedit mt-3">Lưu thay đổi</button>
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary mt-3 ml-2" })
}
