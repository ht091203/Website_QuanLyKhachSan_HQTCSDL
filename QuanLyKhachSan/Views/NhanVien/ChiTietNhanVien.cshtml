@model QuanLyKhachSan.Models.NhanVien

@{
    ViewBag.Title = "Chi tiết nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title mt-5">Chi Tiết nhân viên</h3>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card p-4">
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Họ Tên:</strong>
                    <p>@Model.HoTen</p>
                </div>
                <div class="col-md-6">
                    <strong>Ngày Sinh:</strong>
                    <p>@Model.NgaySinh</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Giới Tính:</strong>
                    <p>@Model.GioiTinh</p>
                </div>
                <div class="col-md-6">
                    <strong>Số Điện Thoại:</strong>
                    <p>@Model.SoDienThoai</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Email:</strong>
                    <p>@Model.Email</p>
                </div>
                <div class="col-md-6">
                    <strong>Địa Chỉ:</strong>
                    <p>@Model.DiaChi</p>
                </div>
            </div>

            <div class="mt-3">
                @Html.ActionLink("Chỉnh sửa", "ChinhSuaNhanVien", new { id = Model.MaNV }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    </div>
</div>
