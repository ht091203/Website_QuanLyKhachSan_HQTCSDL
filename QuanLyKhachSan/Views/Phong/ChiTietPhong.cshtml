@model QuanLyKhachSan.Models.PhongViewModel
@{
    ViewBag.Title = "Chi tiết phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header mt-5">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Chi tiết phòng: @Model.SoPhong</h3>
        </div>
        <div class="col-auto">
            @Html.ActionLink("Quay lại danh sách", "Index", "Phong", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Thông tin cơ bản</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Số phòng</dt>
                    <dd class="col-sm-8">@Model.SoPhong</dd>

                    <dt class="col-sm-4">Vị trí</dt>
                    <dd class="col-sm-8">@Model.ViTri</dd>

                    <dt class="col-sm-4">Mô tả</dt>
                    <dd class="col-sm-8">@Model.MoTa</dd>

                    <dt class="col-sm-4">Loại phòng</dt>
                    <dd class="col-sm-8">@Model.TenLoai</dd>

                    <dt class="col-sm-4">Đơn giá</dt>
                    <dd class="col-sm-8">@String.Format("{0:N0}₫", Model.DonGia)</dd>

                    <dt class="col-sm-4">Trạng thái</dt>
                    <dd class="col-sm-8">
                        @if (Model.TrangThai == "Trống" || Model.TrangThai == "Sẵn sàng")
                        {
                            <span class="badge bg-success-light">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-danger-light">Đang sử dụng</span>
                        }
                    </dd>
                </dl>
                <div class="mt-3 d-flex justify-content-between">
                    @Html.ActionLink("Quay lại", "Index", new { id = Model.MaPhong }, new { @class = "btn btn-secondary" })
                    <div>
                        @Html.ActionLink("Chỉnh sửa phòng", "ChinhSuaPhong", new { id = Model.MaPhong }, new { @class = "btn btn-primary me-2" })
                        @Html.ActionLink("Xóa phòng", "XoaPhong", new { id = Model.MaPhong }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
