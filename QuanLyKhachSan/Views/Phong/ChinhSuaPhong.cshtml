@model QuanLyKhachSan.Models.PhongViewModel
@{
    ViewBag.Title = "Chỉnh sửa phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title mt-5">Edit Room</h3>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row formtype">
        @Html.HiddenFor(m => m.MaPhong)

        <div class="col-md-4">
            <div class="form-group">
                <label>Room Number</label>
                @Html.EditorFor(m => m.SoPhong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.SoPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Loại phòng</label>
                @Html.DropDownListFor(m => m.MaLP, (SelectList)ViewBag.LoaiPhongList, "--Chọn loại phòng--", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MaLP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Position</label>
                @Html.EditorFor(m => m.ViTri, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ViTri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <label>Description</label>
                @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(m => m.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Status</label>
                @Html.EditorFor(m => m.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.TrangThai, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary buttonedit ml-2">Lưu</button>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary buttonedit" })
    </div>
}
