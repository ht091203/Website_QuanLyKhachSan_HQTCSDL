@model QuanLyKhachSan.Models.PhongViewModel
@{
    ViewBag.Title = "Thêm phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title mt-5">Thêm phòng</h3>
        </div>
    </div>
</div>

@using (Html.BeginForm("ThemPhong", "Phong", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row formtype">
        <div class="col-md-4">
            <div class="form-group">
                <label>Room Number</label>
                @Html.TextBoxFor(m => m.SoPhong, new { @class = "form-control", placeholder = "Nhập số phòng" })
                @Html.ValidationMessageFor(m => m.SoPhong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Loại phòng</label>
                @Html.DropDownListFor(m => m.MaLP, (SelectList)ViewBag.LoaiPhongList, "--Chọn loại phòng--", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MaLP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Location</label>
                @Html.TextBoxFor(m => m.ViTri, new { @class = "form-control", placeholder = "Nhập vị trí phòng" })
                @Html.ValidationMessageFor(m => m.ViTri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Description</label>
                @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = "4", placeholder = "Mô tả" })
                @Html.ValidationMessageFor(m => m.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Status</label>
                @Html.TextBoxFor(m => m.TrangThai, new { @class = "form-control", placeholder = "Trạng thái (Trống/Đã thuê...)" })
                @Html.ValidationMessageFor(m => m.TrangThai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label>Upload Image</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a href="@Url.Action("Index", "Phong")" class="btn btn-secondary ml-2">Quay lại</a>
    </div>
}
