@model IEnumerable<QuanLyKhachSan.Models.LoaiPhongViewModel>
@{
    ViewBag.Title = "Phòng trống";
}

<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Kết quả phòng trống</h2>
                    <div class="bt-option">
                        <a href="@Url.Action("Index", "TrangChu")">Trang chủ</a>
                        <span>Phòng trống</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="rooms-section spad">
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="room-item">
                            <img src="@(Url.Content("~/Content/img/room/" + item.Anh))"
                                 alt="@item.TenLoai"
                                 onerror="this.src='@Url.Content("~/Content/img/room/room-1.jpg")'"
                                 class="img-fluid rounded" />
                            <div class="ri-text">
                                <h4>@item.TenLoai</h4>
                                <h3>@item.DonGia.ToString("N0")₫<span>/Đêm</span></h3>
                                <table>
                                    <tbody>
                                        <tr><td class="r-o">Phòng:</td><td>@item.TenLoai</td></tr>
                                        <tr><td class="r-o">Mô tả:</td><td>@item.MoTa</td></tr>
                                    </tbody>
                                </table>
                                <a href="@Url.Action("Details", "Phong", new { id = item.MaLP })" class="primary-btn">Chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-lg-12 text-center">
                    <p>Không có phòng trống trong khoảng thời gian đã chọn.</p>
                </div>
            }
        </div>
    </div>
</section>
