                    <span>Bộ sưu tập của chúng tôi</span>
                    <h2>Khám phá không gian của chúng tôi</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="gallery-item set-bg" data-setbg="@Url.Content("~/Content/img/gallery/gallery-1.jpg")">
                    <div class="gi-text">
                        <h3>Phòng sang trọng</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="gallery-item set-bg" data-setbg="@Url.Content("~/Content/img/gallery/gallery-3.jpg")">
                            <div class="gi-text">
                                <h3>Phòng sang trọng</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="gallery-item set-bg" data-setbg="@Url.Content("~/Content/img/gallery/gallery-4.jpg")">
                            <div class="gi-text">
                                <h3>Phòng sang trọng</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="gallery-item large-item set-bg" data-setbg="@Url.Content("~/Content/img/gallery/gallery-2.jpg")">
                    <div class="gi-text">
                        <h3>Phòng sang trọng</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
