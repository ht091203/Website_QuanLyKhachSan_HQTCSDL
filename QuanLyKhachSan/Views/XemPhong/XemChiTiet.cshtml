@model QuanLyKhachSan.Models.LoaiPhongViewModel
@{
    ViewBag.Title = "Chi tiết phòng " + Model.TenLoai;
}

<!-- Breadcrumb -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="breadcrumb-text">
            <h2>@Model.TenLoai</h2>
            <div class="bt-option">
                <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                <a href="@Url.Action("Index", "XemPhong")">Phòng</a>
            </div>
        </div>
    </div>
</div>

<!-- Room Details -->
<section class="room-details-section spad">
    <div class="container">
        <div class="row">
            <!-- Ảnh phòng -->
            <div class="col-lg-12 mb-12">
                <div class="room-details-item">
                    <img src="@Url.Content("~/Content/img/room/" + Model.Anh)"
                         alt="@Model.TenLoai"
                         class="img-fluid w-100 rounded-3 shadow-lg"
                         style="max-height: 500px; object-fit: cover;"
                         onerror="this.src='@Url.Content("~/Content/img/room/room-1.jpg")'" />
                    <div class="rd-text mt-3">
                        <h2>@Model.DonGia.ToString("N0") ₫ <span>/đêm</span></h2>
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td class="r-o">Sức chứa:</td>
                                    <td>@Model.SucChua người</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Mô tả phòng:</td>
                                    <td>@Model.MoTa</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <a href="@Url.Action("ChonPhong", "DatPhongO", new { MaLP = Model.MaLP })"
                       class="btn w-100 btn-lg shadow-sm text-uppercase mt-3"
                       style="background-color:#6b6b6b; color:white; border:none;">
                        Đặt phòng ngay
                    </a>

                </div>
            </div>

        </div>
    </div>
</section>
